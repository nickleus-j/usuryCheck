<UserControl x:Class="usuryCheck.CurrencyCompo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:usuryCheck"
             mc:Ignorable="d" 
             d:DesignHeight="120" d:DesignWidth="200">
    <WrapPanel MinHeight="32">
        <TextBlock Text="Currency"/>
        <ComboBox MinWidth="50" x:Name="CurrencyField"
          ItemsSource="{Binding Currencies}" MinHeight="32"
          SelectedItem="{Binding SelectedCurrency, Mode=TwoWay}"
          IsEditable="False"/>
    </WrapPanel>
</UserControl>
