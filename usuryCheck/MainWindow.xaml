<Window x:Class="usuryCheck.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:usuryCheck"
        mc:Ignorable="d"
        Title="Usury Detection" Height="500" Width="800">
    <Window.Resources>
        <!-- Simple numeric textbox style: right-align -->
        <Style x:Key="NumericTextBox" TargetType="TextBox">
            <Setter Property="HorizontalContentAlignment" Value="Right"/>
        </Style>
    </Window.Resources>

    <Grid Margin="2">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Left: Form -->
        <StackPanel Grid.Column="0" Margin="0,0,12,0" VerticalAlignment="Top" >
            <TextBlock FontSize="18" Text="Usury Detector" Margin="0,0,0,8" FontFamily="Segoe UI Black"/>
            <UniformGrid Columns="2" Rows="3" Margin="0,0,0,8" HorizontalAlignment="Stretch">
                <StackPanel Margin="6">
                    <TextBlock>Principal Amount:</TextBlock>
                    <TextBox x:Name="PrincipalBox" />
                </StackPanel>

                <StackPanel Margin="6">
                    <TextBlock>Annual Rate (%):</TextBlock>
                    <TextBox x:Name="AnnualRateBox" />
                </StackPanel>

                <StackPanel Margin="6">
                    <TextBlock>Term (months):</TextBlock>
                    <TextBox x:Name="TermBox" />
                </StackPanel>

                <StackPanel Margin="6">
                    <TextBlock>Up-front Fees:</TextBlock>
                    <TextBox x:Name="FeesBox" />
                </StackPanel>

                <StackPanel Margin="6">
                    <TextBlock>Jurisdiction:</TextBlock>
                    <ComboBox x:Name="JurisdictionBox" />
                </StackPanel>

                <StackPanel Margin="6">
                    <CheckBox x:Name="IncludeFeesCheck" Content="Include fees in APR" IsChecked="True"/>
                </StackPanel>
            </UniformGrid>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="6">
                <Button x:Name="CalculateButton" Content="Calculate" Width="110" Margin="0,0,8,0" Click="CalculateButton_Click"/>
                <Button x:Name="ResetButton" Content="Reset" Width="110" Click="ResetButton_Click"/>
            </StackPanel>
        </StackPanel>

        <!-- Right: Result card -->
        <Border Grid.Column="1" Background="#FFBFD2B8" CornerRadius="8" Padding="12" BorderBrush="#FFDDDDDD" BorderThickness="1">
            <StackPanel>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Image x:Name="ResultIcon" Width="42" Height="42" Margin="0,0,8,0"/>
                    <TextBlock x:Name="ResultMainText" Text="Result goes here" VerticalAlignment="Center" FontSize="14" TextWrapping="Wrap" FontFamily="Noto Sans JP Black"/>
                </StackPanel>

                <Separator Margin="0,8"/>

                <StackPanel x:Name="DetailsPanel" Margin="0,8,0,0">
                    <TextBlock x:Name="DetailLine1" Text="—" Margin="0,4"/>
                    <TextBlock x:Name="DetailLine2" Text="—" Margin="0,4"/>
                    <TextBlock x:Name="DetailLine3" Text="—" Margin="0,4"/>
                    <TextBlock x:Name="DetailLine4" Text="—" Margin="0,4"/>
                </StackPanel>

                <TextBlock x:Name="FooterNote" FontStyle="Italic" FontSize="11" Foreground="DarkGoldenrod" Margin="0,12,0,0"
                           Text="Jurisdiction caps are loaded from jurisdictions.json (editable)."/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
